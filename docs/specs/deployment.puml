@startuml Deployment Diagram

title HairPop - Deployment Diagram

skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial

node "Client Browser" as Browser {
    artifact "Angular SPA" as SPA
    note bottom
        Port 4200
        TypeScript
        SCSS
    end note
}

node "Web Server" as WebServer {
    artifact "API Gateway" as Gateway
    note bottom
        ASP.NET Core
        Port 7023
        HTTPS
    end note
}

node "Application Server" as AppServer {
    artifact "Braiders API" as BraidersAPI
    artifact "Reviews API" as ReviewsAPI
    artifact "Users API" as UsersAPI
}

node "Database Server" as DBServer {
    database "SQL Server" as DB
}

node "External Services" as External {
    cloud "Email Provider" as Email
    cloud "Payment Provider" as Payment
}

Browser --> WebServer : HTTPS
WebServer --> AppServer : HTTP
AppServer --> DBServer : TCP
AppServer --> External : HTTPS

@enduml
