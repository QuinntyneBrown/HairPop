@startuml Use Cases

title HairPop - Use Case Diagram

skinparam backgroundColor #FEFEFE
skinparam defaultFontName Arial
skinparam actorStyle awesome

left to right direction

actor "Customer" as Customer
actor "Braider" as Braider
actor "Admin" as Admin

rectangle "HairPop Platform" {

    package "Braider Discovery" {
        usecase "Browse Braiders" as UC1
        usecase "View Braider Profile" as UC2
        usecase "Search Braiders" as UC3
        usecase "Filter by Style" as UC4
    }

    package "Hair Styles" {
        usecase "Browse Hair Styles" as UC5
        usecase "View Style Details" as UC6
        usecase "Filter by Category" as UC7
    }

    package "Reviews" {
        usecase "Read Reviews" as UC8
        usecase "Write Review" as UC9
        usecase "Rate Braider" as UC10
    }

    package "Braider Management" {
        usecase "Create Profile" as UC11
        usecase "Update Profile" as UC12
        usecase "Add Portfolio Images" as UC13
        usecase "Set Availability" as UC14
    }

    package "Administration" {
        usecase "Manage Braiders" as UC15
        usecase "Moderate Reviews" as UC16
        usecase "View Analytics" as UC17
    }
}

