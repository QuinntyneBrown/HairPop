@startuml Frontend Components

title HairPop Frontend - Angular Component Diagram

skinparam backgroundColor #FEFEFE
skinparam componentStyle uml2
skinparam defaultFontName Arial

package "HairPop.App - Angular 18" {

    package "Core" {
        [AppComponent] as App
        [app.routes.ts] as Routes
        [app.config.ts] as Config
        [main.ts] as Main
    }

    package "Layout Components" {
        [HeaderComponent] as Header
        [FooterComponent] as Footer
        [FABComponent] as FAB
    }

    package "Page Components" {
        [BraidersPageComponent] as BraidersPage
        [BraiderPageComponent] as BraiderPage
        [BraiderFullComponent] as BraiderFull
        [HairStylesPageComponent] as StylesPage
        [SearchPageComponent] as SearchPage
        [SearchResultsPageComponent] as ResultsPage
    }

    package "Shared Components" {
        [BraiderComponent] as BraiderCard
        [HairStyleComponent] as StyleCard
    }

    package "State Management" {
        [NGRX ComponentStore] as Store
    }

    package "Services" {
        [HttpClient] as Http
        [SignalR Client] as SignalR
    }
}

cloud "Backend API" as API

App --> Header
App --> Footer
App --> FAB
App --> Routes

Routes --> BraidersPage
Routes --> BraiderPage
Routes --> BraiderFull
Routes --> StylesPage
Routes --> SearchPage
Routes --> ResultsPage

BraidersPage --> BraiderCard
ResultsPage --> BraiderCard
ResultsPage --> StyleCard
StylesPage --> StyleCard

BraidersPage --> Store
BraiderPage --> Store
SearchPage --> Store

Store --> Http
Http --> API

note right of BraiderCard
    Inputs:
    - profileImageUrl
    - profileName
    Outputs:
    - braiderSelected
end note

note right of Header
    Contains:
    - Logo
    - Navigation
    - Search Button
end note

@enduml
